include_rules

# If there are no file descriptors configured, then a small part of the
# logic in this directory may still apply to socket descriptors

include files.mk

ifneq ($(CONFIG_NFILE_DESCRIPTORS),0)

include mmap/files.mk

# Additional files required is mount-able file systems are supported
ifneq ($(CONFIG_DISABLE_MOUNTPOINT),y)
include fat/files.mk
include romfs/files.mk
include nxffs/files.mk
include nfs/files.mk
endif
endif

: foreach $(ASRCS) |> !as |> {objects}
: foreach $(CSRCS) |> !cc |> {objects}
: foreach $(CXXSRCS) |> !cxx |> {objects}
: {objects} |> !ar |> lib%d.a
